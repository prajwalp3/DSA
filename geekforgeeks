class Solution {
  public:
    long long sumOfSeries(long long N) {
          if(N == 1){
            return 1; 
        }
        long long prev = sumOfSeries(N-1);
        long long now = (N*N*N) + prev;
        return now;
    }
   
    };
Functional Recursion is used here. like,

f(3)--->
3*3*3+f(2)--->
3*3*3+2*2*2+f(1)--->
3*3*3+2*2*2+1*1*1+f(0)
3*3*3+2*2*2+1*1*1+0 = 36

class Solution {
  public:
  long long sum=0;
    long long sumOfSeries(long long N) {
            // code here
        if(N<=0)
        return sum;
        long long cube = N*N*N;
        sum=sum+cube;
        sumOfSeries(N-1);
        return sum;
    }

